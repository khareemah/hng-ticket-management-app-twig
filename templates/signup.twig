{% extends "base.twig" %}

{% block content %}
<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
  <div class="max-w-md w-full bg-white p-8 rounded-xl shadow"
  
  >
    <div class="w-full flex flex-col gap-1 mb-6"
    >
    <h2 class="text-3xl font-bold text-card-foreground">Create Account</h2>
    <p class="text-gray-300">Join TicketFlow and start managing tickets</p>
    </div>

    <form id="signupForm" class="space-y-4">

      <p id="signupError" class="text-red-500 text-sm hidden text-center"></p>


      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
        <input type="text" id="signupName" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-200" placeholder="Your name" required>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input type="email" id="signupEmail" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-200" placeholder="Enter your email" required>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input type="password" id="signupPassword" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-200" placeholder="Create password" required>
      </div>

      

      <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg">
        Sign Up
      </button>

      <p class="text-sm text-center text-gray-600">
        Already have an account?
        <a href="/index.php?page=login" class="text-blue-600 font-semibold hover:underline">Login</a>
      </p>
    </form>
  </div>
</div>

<script src="/public/scripts/auth.js"></script>
{% endblock %}
