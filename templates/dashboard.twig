{% extends "base.twig" %}

{% block title %}Dashboard - Ticket Manager{% endblock %}

{% block content %}
  <section class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm">
      <div class="max-w-[1440px] mx-auto px-6 py-4 flex justify-between items-center">
       <div class="flex flex-col gap-1>
        <h2 class="text-3xl font-bold text-card-foreground">Dashboard</h2>
         <p class="text-sm">Welcome, <span id="userName"></span></p>
       </div>
        <nav class="flex gap-4 items-center"
        >
         
          <a href="index.php?page=tickets" class="w-full bg-blue-700 hover:bg-blue-700 text-white font-semibold py-2 px-3 rounded-lg">Manage Tickets</a>

          <button id="logoutBtn" class="bg-background border border-border px-4 py-2 rounded-lg text-black">
            Logout
          </button>
        </nav>
      </div>
    </header>

    <!-- Dashboard Content -->
    <main class="max-w-[1440px] mx-auto px-6 py-10">
     

      <!-- Summary Cards -->
      <div class="grid grid-cols-1 sm:grid-cols-4 gap-6">
        <div class="bg-white p-6 rounded-xl shadow text-center">
          <h3 class="text-lg font-semibold text-gray-700">Total Tickets</h3>
          <p id="totalTickets" class="text-3xl font-bold text-indigo-600 mt-2">0</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow text-center">
          <h3 class="text-lg font-semibold text-gray-700">Open Tickets</h3>
          <p id="openTickets" class="text-3xl font-bold text-green-600 mt-2">0</p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow text-center">
          <h3 class="text-lg font-semibold text-gray-700">In progress</h3>
          <p id="openTickets" class="text-3xl font-bold text-green-600 mt-2">0</p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow text-center">
          <h3 class="text-lg font-semibold text-gray-700">Resolved Tickets</h3>
          <p id="resolvedTickets" class="text-3xl font-bold text-blue-600 mt-2">0</p>
        </div>
      </div>
    </main>
  </section>

  <script src="public/scripts/dashboard.js"></script>
{% endblock %}
