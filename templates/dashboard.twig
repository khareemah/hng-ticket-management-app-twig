{% extends "base.twig" %}

{% block content %}
<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white border-b border-gray-200 sticky top-0 z-40">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-gray-800">Dashboard</h1>
      <div class="flex items-center gap-4">
        <span id="userName" class="text-gray-600"></span>
        <button
          id="logoutBtn"
          class="text-red-500 hover:text-red-600 font-medium border border-red-500 px-3 py-1 rounded-lg hover:bg-red-50"
        >
          Logout
        </button>
      </div>
    </div>
  </header>

  <!-- Stats Cards -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      <div class="bg-white p-6 rounded-xl shadow">
        <p class="text-gray-500 text-sm">Total Tickets</p>
        <h2 id="totalTickets" class="text-3xl font-bold text-gray-800 mt-1">0</h2>
      </div>

      <div class="bg-white p-6 rounded-xl shadow">
        <p class="text-gray-500 text-sm">Open Tickets</p>
        <h2 id="openTickets" class="text-3xl font-bold text-gray-800 mt-1">0</h2>
      </div>

      <div class="bg-white p-6 rounded-xl shadow">
        <p class="text-gray-500 text-sm">Closed Tickets</p>
        <h2 id="closedTickets" class="text-3xl font-bold text-gray-800 mt-1">0</h2>
      </div>
    </div>

    <!-- Create Ticket Button -->
    <div class="flex justify-end mb-6">
      <a
        href="/index.php?page=create-ticket"
        class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium"
      >
        + Create Ticket
      </a>
    </div>

    <!-- Ticket List Section -->
    <section id="ticketList" class="bg-white rounded-xl shadow p-6">
      <h3 class="text-xl font-semibold text-gray-800 mb-4">Your Tickets</h3>
      <div id="ticketsContainer" class="space-y-4"></div>
    </section>
  </main>
</div>

<script src="/public/scripts/dashboard.js"></script>
{% endblock %}
